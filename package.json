{
    "name": "darian-portfolio-2018",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "browsersync": "browser-sync start --server --files 'styles/*.css, scripts/*.js, *.html'",
        "compilehtml": "pug --output-style --pretty -o work/ src/work/*.pug",
        "autoprefixer": "postcss -u autoprefixer -r ./styles/*",
        "build-css": "npm run autoprefixer && node-sass-chokidar ./src/styles -o ./styles",
        "watch-css": "node-sass-chokidar ./src/styles -o ./styles --watch --recursive",
        "watch-html": "chokidar '**/*.pug' -c 'npm run compilehtml'",
        "serve": "npm run compilehtml && npm run build-css && npm run browsersync"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "autoprefixer": "^9.1.5",
        "browser-sync": "^2.26.0",
        "chokidar": "^3.0.1",
        "chokidar-cli": "^1.2.2",
        "node-sass-chokidar": "^1.3.3",
        "postcss-cli": "^6.0.0",
        "pug": "^2.0.4",
        "pug-cli": "^1.0.0-alpha6"
    }
}
