{
    "name": "darian-portfolio-2018",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "autoprefixer": "postcss -u autoprefixer -r ./styles/css/*",
        "build-css": "npm run autoprefixer && node-sass-chokidar ./styles/scss -o ./styles/css",
        "watch-css": "npm run build-css && node-sass-chokidar ./styles/scss -o ./styles/css --watch --recursive",
        "serve": "browser-sync start --server --files 'styles/css/*.css, scripts/*.js, *.html'"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "autoprefixer": "^9.1.5",
        "browser-sync": "^2.26.0",
        "node-sass-chokidar": "^1.3.3",
        "postcss-cli": "^6.0.0"
    }
}
